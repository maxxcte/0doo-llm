<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Base Kanban View for llm.resource -->
    <record id="view_llm_resource_kanban_base" model="ir.ui.view">
        <field name="name">llm.resource.kanban.base</field>
        <field name="model">llm.resource</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column" sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="state"/>
                <field name="kanban_state"/>
                <field name="lock_date"/>
                <field name="model_id"/>
                <field name="res_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_card">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"><field name="name"/></strong>
                                    </div>
                                    <div class="o_dropdown_kanban dropdown">
                                        <button class="btn btn-sm btn-light dropdown-toggle" name="kanban_dropdown_toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="fa fa-ellipsis-v" title="Menu" aria-label="Menu"/>
                                        </button>
                                        <div class="dropdown-menu dropdown-menu-end" role="menu">
                                            <t t-if="widget.editable"><a type="edit" class="dropdown-item">Edit</a></t>
                                            <t t-if="widget.deletable"><a type="delete" class="dropdown-item">Delete</a></t>
                                            <div role="separator" class="dropdown-divider"/>
                                            <!-- Base Actions -->
                                            <a name="retrieve" type="object" class="dropdown-item" t-if="record.state.raw_value == 'draft'">Retrieve</a>
                                            <a name="parse" type="object" class="dropdown-item" t-if="record.state.raw_value == 'retrieved'">Parse</a>
                                            <a name="process_resource" type="object" class="dropdown-item">Process (Base)</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div><span class="o_kanban_tag"><field name="model_id"/>: <field name="res_id"/></span></div>
                                    <!-- No chunk count here -->
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left"><field name="kanban_state" widget="state_selection"/></div>
                                    <div class="oe_kanban_bottom_right">
                                        <!-- Base states only -->
                                        <field name="state" widget="label_selection" options="{'classes': {'draft': 'default', 'retrieved': 'primary', 'parsed': 'info'}}"/>
                                    </div>
                                </div>
                                <div class="oe_clear"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Base Form View for llm.resource -->
    <record id="view_llm_resource_form_base" model="ir.ui.view">
        <field name="name">llm.resource.form.base</field>
        <field name="model">llm.resource</field>
        <field name="arch" type="xml">
            <form>
                <header>
                     <!-- Base Actions -->
                    <button name="retrieve" string="Retrieve" type="object" class="oe_highlight" states="draft"/>
                    <button name="parse" string="Parse" type="object" class="oe_highlight" states="retrieved"/>
                    <button name="process_resource" string="Process (Base)" type="object" class="btn-secondary"/>
                    <!-- Base States -->
                    <field name="state" widget="statusbar" statusbar_visible="draft,retrieved,parsed" options="{'clickable':1}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- No buttons here in base -->
                    </div>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Resource Name"/></h1>
                    </div>
                    <group>
                        <group name="group_left">
                            <field name="model_id" options="{'no_create': True}"/>
                            <field name="res_model" invisible="1"/>
                            <field name="res_id"/>
                            <field name="lock_date" readonly="1"/>
                            <field name="external_url" widget="url" attrs="{'invisible': [('external_url', '=', False)]}"/>
                        </group>
                        <group name="group_right">
                            <!-- No collection field -->
                            <field name="retriever" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="parser" attrs="{'readonly': [('state', 'not in', ['draft', 'retrieved'])]}"/>
                            <!-- No chunker fields -->
                            <field name="kanban_state" widget="state_selection"/>
                             <!-- No chunk_count field -->
                        </group>
                    </group>
                    <notebook>
                        <page string="Content" name="content">
                            <field name="content" nolabel="1" placeholder="Resource content will appear here after retrieval and parsing" widget="text"/>
                        </page>
                         <!-- No chunks page -->
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Base Tree View for llm.resource -->
    <record id="view_llm_resource_tree_base" model="ir.ui.view">
        <field name="name">llm.resource.tree.base</field>
        <field name="model">llm.resource</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="model_id"/>
                <field name="res_id"/>
                <field name="external_url" widget="url" optional="show"/>
                <field name="state"/>
                 <!-- No chunk_count -->
                <field name="lock_date"/>
            </tree>
        </field>
    </record>

    <!-- Base Search View for llm.resource -->
    <record id="view_llm_resource_search_base" model="ir.ui.view">
        <field name="name">llm.resource.search.base</field>
        <field name="model">llm.resource</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="model_id"/>
                <field name="res_id"/>
                 <!-- Base states -->
                <filter string="Draft" name="state_draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Retrieved" name="state_retrieved" domain="[('state', '=', 'retrieved')]"/>
                <filter string="Parsed" name="state_parsed" domain="[('state', '=', 'parsed')]"/>
                <!-- No RAG states -->
                <filter string="Locked" name="locked" domain="[('lock_date', '!=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="State" name="group_by_state" domain="[]" context="{'group_by':'state'}"/>
                    <filter string="Model" name="group_by_model" domain="[]" context="{'group_by':'model_id'}"/>
                    <!-- No collection grouping -->
                </group>
            </search>
        </field>
    </record>

    <record id="action_llm_resource" model="ir.actions.act_window">
        <field name="name">Resources</field>
        <field name="res_model">llm.resource</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_llm_resource_kanban_base')}),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('view_llm_resource_tree_base')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_llm_resource_form_base')})]"/>
        <field name="search_view_id" ref="view_llm_resource_search_base"/>
        <field name="context">{"search_default_group_by_state": 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create your first resource</p>
        </field>
    </record>

</odoo>