<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="llm_thread.LLMChatThreadHeader" owl="1">
        <div class="o_ThreadViewTopbar d-flex flex-shrink-0 w-100 px-3 bg-100 border-bottom">
            <button t-if="isSmall" 
                    class="o_ThreadViewTopbar_button btn px-2 border-none rounded shadow-none me-2"
                    t-on-click="_onToggleThreadList">
                <i class="fa fa-lg fa-bars text-700" role="img" aria-label="Toggle thread list"/>
            </button>
            
            <div class="o_ThreadViewTopbar_title d-flex flex-grow-1 align-self-center align-items-center min-w-0">
                <t t-if="!threadView.isEditingName">
                    <div class="o_ThreadViewTopbar_threadName o_ThreadViewTopbar_editableItem lead flex-shrink-1 px-1 border text-truncate fw-bold" 
                         t-att-title="thread.name" 
                         t-on-click="onClickTopbarThreadName"
                         t-attf-class="{{ 'border-light' }}">
                        <t t-esc="thread.name"/>
                    </div>
                </t>
                <t t-if="threadView.isEditingName">
                    <input class="o_ThreadViewTopbar_threadNameInput form-control lead fw-bold" 
                           type="text" 
                           t-att-value="threadView.pendingName"
                           t-on-input="onInputThreadNameInput"
                           t-on-keydown="onKeyDownThreadNameInput"
                           t-ref="threadNameInput"/>
                </t>
                <t t-if="modelName">
                    <div class="o_ThreadViewTopbar_threadDescriptionSeparator flex-shrink-0 mx-2 py-2 border-start"/>
                    <div class="o_ThreadViewTopbar_threadDescription d-flex align-items-center flex-shrink-0 px-1">
                        <span class="o_ThreadViewTopbar_providerName flex-shrink-0" t-esc="providerName"/>
                        <span class="mx-1 flex-shrink-0">â€¢</span>
                        <span class="o_ThreadViewTopbar_modelName text-truncate" t-att-title="modelName" t-esc="modelName"/>
                    </div>
                </t>
            </div>

            <button class="o_ThreadViewTopbar_button btn px-2 border-none rounded shadow-none" 
                    t-on-click="onSettingsClick" 
                    title="Settings">
                <i class="fa fa-lg fa-gear text-700"/>
            </button>
        </div>
    </t>
</templates>
