<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="llm_thread.LLMChatThreadHeader" owl="1">
        <div class="o_LLMChatThread_header d-flex align-items-center">
            <!-- Mobile thread list toggle -->
            <button t-if="isSmall" 
                    class="o_LLMChatThreadHeader_toggleList btn p-0 me-3"
                    t-on-click="_onToggleThreadList">
                <i class="fa fa-bars" role="img" aria-label="Toggle thread list"/>
            </button>
            
            <!-- Thread info -->
            <div class="d-flex align-items-center flex-grow-1 gap-3 min-w-0">
                <div class="o_LLMChatThreadHeader_titleContainer text-truncate">
                    <h3 class="o_LLMChatThreadHeader_title text-truncate" t-esc="thread.name"/>
                </div>
                <t t-if="modelName">
                    <div class="o_LLMChatThreadHeader_model flex-shrink-0">
                        <span class="o_LLMChatThreadHeader_modelProvider" t-esc="providerName"/>    
                        <span class="o_LLMChatThreadHeader_modelSeparator">â€¢</span> 
                        <span class="o_LLMChatThreadHeader_modelName" t-esc="modelName"/>
                    </div>
                </t>
            </div>

            <!-- Settings button -->
            <button class="o_LLMChatThreadHeader_settings btn flex-shrink-0" t-on-click="onSettingsClick">
                <i class="fa fa-cog"/>
                <span class="o_LLMChatThreadHeader_settingsText">Settings</span>
            </button>
        </div>
    </t>
</templates>
