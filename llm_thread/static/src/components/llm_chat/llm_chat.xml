<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="llm_thread.LLMChat" owl="1">
        <div class="o_LLMChat d-flex h-100">
            <!-- Thread List Section -->
            <div class="o_LLMChat_sidebar border-end" style="width: 300px;">
                <LLMChatSidebar record="llmChatView"/>
            </div>
            
            <!-- Chat Section -->
            <div class="o_LLMChat_content flex-grow-1">
                <t t-if="llmChatView.llmChat.activeThread">
                    <LLMChatThread record="llmChatView.llmChat.activeThread"/>
                </t>
                <t t-else="">
                    <div class="o_LLMChat_noThread d-flex align-items-center justify-content-center h-100">
                        <span>Select a conversation to start chatting</span>
                    </div>
                </t>
            </div>
        </div>
    </t>
</templates>
