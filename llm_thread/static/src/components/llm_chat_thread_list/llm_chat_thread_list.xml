<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="llm_thread.LLMChatThreadList" owl="1">
        <div class="o_LLMChatThreadList d-flex flex-column h-100">
            <!-- Thread List -->
            <div class="o_LLMChatThreadList_content flex-grow-1 overflow-auto">
                <t t-if="llmChatView.llmChat.threads.length === 0">
                    <div class="o_LLMChatThreadList_empty d-flex align-items-center justify-content-center h-100 p-4">
                        <div class="text-muted">No chats yet. Start a new chat!</div>
                    </div>
                </t>
                <t t-else="">
                    <div class="o_LLMChatThreadList_items" t-att-class="{ 'pe-none': state.isLoading }">
                        <t t-foreach="llmChatView.llmChat.threads" t-as="thread" t-key="thread.id">
                            <button class="o_LLMChatThreadList_item d-flex align-items-center p-3"
                                    t-on-click="() => this._onThreadClick(thread)"
                                    t-att-class="{ active: thread.id === activeThread?.id }">
                                <div class="o_LLMChatThreadList_itemInfo flex-grow-1">
                                    <div class="d-flex align-items-center">
                                        <span class="o_LLMChatThreadList_itemTitle" t-esc="thread.name"/>
                                        <t t-if="state.isLoading and thread.id === activeThread?.id">
                                            <div class="spinner-border spinner-border-sm ms-2" role="status">
                                                <span class="visually-hidden">Loading...</span>
                                            </div>
                                        </t>
                                    </div>
                                </div>
                            </button>
                        </t>
                    </div>
                </t>
            </div>
        </div>
    </t>
</templates>
