<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t
    t-name="llm_thread.ChatterTopbar"
    t-inherit="mail.ChatterTopbar"
    t-inherit-mode="extension"
    owl="1"
  >
        <!-- Insert AI button after the Schedule Activity button -->
        <xpath expr="//button[hasclass('o_ChatterTopbar_buttonScheduleActivity')]" position="after">
            <!-- AI Chat Button inserted next to Activities -->
            <div class="o_ChatterTopbar_borderLeft ms-2" />
            <button
                class="o_ChatterTopbar_button btn btn-light text-nowrap ms-2"
                type="button"
                t-att-class="{ 'o-active btn-odoo': chatterTopbar.chatter.is_chatting_with_llm }"
                t-on-click="chatterTopbar.chatter.toggleLLMChat">
                <i class="fa fa-robot me-1" />
                <span>AI</span>
            </button>
        </xpath>
    </t>
</templates>
