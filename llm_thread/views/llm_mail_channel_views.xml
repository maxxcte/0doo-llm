<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="llm_mail_channel_view_tree" model="ir.ui.view">
        <field name="name">llm.mail.channel.tree</field>
        <field name="model">llm.mail.channel</field>
        <field name="arch" type="xml">
            <tree string="LLM Channels">
                <field name="name"/>
                <field name="channel_type"/>
                <field name="description"/>
                <field name="member_count"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="llm_mail_channel_view_form" model="ir.ui.view">
        <field name="name">llm.mail.channel.form</field>
        <field name="model">llm.mail.channel</field>
        <field name="arch" type="xml">
            <form string="LLM Channel">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Channel Name..." required="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="channel_type"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="member_count"/>
                            <field name="uuid"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Members" name="members">
                            <field name="channel_member_ids">
                                <tree>
                                    <field name="partner_id"/>
                                    <field name="email"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="llm_mail_channel_view_search" model="ir.ui.view">
        <field name="name">llm.mail.channel.search</field>
        <field name="model">llm.mail.channel</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="description"/>
                <filter string="My Channels" name="my_channels" domain="[('channel_member_ids.partner_id', '=', uid)]"/>
                <group expand="0" string="Group By">
                    <filter string="Channel Type" name="group_by_type" domain="[]" context="{'group_by': 'channel_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_llm_mail_channel" model="ir.actions.act_window">
        <field name="name">LLM Channels</field>
        <field name="res_model">llm.mail.channel</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="llm_mail_channel_view_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first LLM Channel!
            </p>
            <p>
                LLM Channels allow you to organize conversations with AI assistants.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem
        id="menu_llm_mail_channel"
        name="LLM Channels"
        action="action_llm_mail_channel"
        parent="llm.menu_llm_root"
        sequence="1"/>
</odoo>