<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Thread Form View -->
    <record id="llm_thread_view_form" model="ir.ui.view">
        <field name="name">llm.thread.view.form</field>
        <field name="model">llm.thread</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                            string="Open Chat"
                            name="action_open_chat"
                            type="object"
                            class="oe_highlight"
                            icon="fa-comments"/>
                    <field name="active" widget="boolean_toggle"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- Add buttons if needed -->
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Chat Title"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="user_id"/>
                            <field name="provider_id"/>
                            <field name="model_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Messages" name="messages">
                            <field name="message_ids">
                                <tree>
                                    <field name="create_date"/>
                                    <field name="llm_role"/>
                                    <field name="body"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Thread Tree View -->
    <record id="llm_thread_view_tree" model="ir.ui.view">
        <field name="name">llm.thread.view.tree</field>
        <field name="model">llm.thread</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="user_id"/>
                <field name="provider_id"/>
                <field name="model_id"/>
                <field name="write_date"/>
                <button
                        name="action_open_chat"
                        type="object"
                        string="Open Chat"
                        class="btn btn-primary btn-sm"
                        icon="fa-comments"/>
            </tree>
        </field>
    </record>

    <!-- Thread Search View -->
    <record id="llm_thread_view_search" model="ir.ui.view">
        <field name="name">llm.thread.view.search</field>
        <field name="model">llm.thread</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="user_id"/>
                <field name="provider_id"/>
                <field name="model_id"/>
                <separator/>
                <filter
                        string="My Threads"
                        name="my_threads"
                        domain="[('user_id', '=', uid)]"/>
                <filter
                        string="Archived"
                        name="inactive"
                        domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter
                            string="User"
                            name="group_by_user"
                            context="{'group_by': 'user_id'}"/>
                    <filter
                            string="Provider"
                            name="group_by_provider"
                            context="{'group_by': 'provider_id'}"/>
                    <filter
                            string="Model"
                            name="group_by_model"
                            context="{'group_by': 'model_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="llm_thread_action" model="ir.actions.act_window">
        <field name="name">Chat Threads</field>
        <field name="res_model">llm.thread</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_my_threads': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first chat thread!
            </p>
            <p>
                Start a conversation with any of your configured LLM providers.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem
            id="menu_llm_thread"
            name="Chat Threads"
            action="llm_thread_action"
            parent="llm.menu_llm_root"
            sequence="20"/>
</odoo>
