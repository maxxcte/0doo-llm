<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="llm.ThreadView" owl="1">
        <div class="o_LLMThreadView d-flex flex-column h-100"
             t-att-class="props.className">
            <!-- Header -->
            <div t-if="thread.name" class="o_LLMThreadView_header border-bottom p-3">
                <div class="d-flex align-items-center justify-content-between">
                    <!-- Title -->
                    <div class="d-flex align-items-center">
                        <h6 class="mb-0" t-esc="thread.name"/>
                        <small t-if="thread.model" class="text-muted ms-2">
                            <t t-esc="thread.model.name"/>
                        </small>
                    </div>

                    <!-- Actions -->
                    <div class="o_LLMThreadView_actions">
                        <button t-if="thread.isLoading"
                                class="btn btn-link btn-sm text-muted"
                                disabled="1">
                            <i class="fa fa-circle-o-notch fa-spin"/>
                        </button>
                        <button t-else=""
                                class="btn btn-link btn-sm text-muted"
                                t-on-click="_loadMessages"
                                t-att-title="env._t('Refresh')">
                            <i class="fa fa-refresh"/>
                        </button>
                    </div>
                </div>

                <!-- Model info -->
                <div t-if="thread.model" class="mt-2 small text-muted">
                    <i class="fa fa-info-circle me-1"/>
                    <t t-esc="thread.provider.name"/>
                </div>
            </div>

            <!-- Main content -->
            <div class="o_LLMThreadView_content flex-grow-1 d-flex flex-column">
                <!-- Initial loading -->
                <div t-if="isLoadingInitial"
                     class="flex-grow-1 d-flex align-items-center justify-content-center">
                    <div class="text-center text-muted">
                        <i class="fa fa-circle-o-notch fa-spin fa-2x mb-2"/>
                        <div>Loading conversation...</div>
                    </div>
                </div>

                <!-- Error state -->
                <div t-elif="thread.hasError"
                     class="flex-grow-1 d-flex flex-column align-items-center justify-content-center p-4">
                    <div class="text-danger mb-3">
                        <i class="fa fa-exclamation-triangle fa-2x"/>
                    </div>
                    <div class="text-danger mb-2" t-esc="thread.errorMessage || env._t('Something went wrong')"/>
                    <button class="btn btn-outline-danger"
                            t-on-click="_loadMessages">
                        <i class="fa fa-refresh me-1"/>
                        Try Again
                    </button>
                </div>

                <!-- Message list -->
                <LLMMessageList t-else=""
                                className="'flex-grow-1'"
                                record="threadView"
                                onMessageRetry.bind="_onMessageRetry"/>

                <!-- Composer -->
                <LLMComposer
                        record="threadView.composer"
                        onSubmit.bind="_onMessageSubmit"
                        onFilesPasted.bind="_onFilesPasted"/>

                <!-- Typing indicator -->
                <div t-if="currentResponse"
                     class="o_LLMThreadView_typing position-absolute bottom-0 start-0 p-3 w-100">
                    <div class="d-flex align-items-center text-muted small">
                        <div class="o_LLMThreadView_typingDots me-2">
                            <span/><span/><span/>
                        </div>
                        <span>Assistant is typing...</span>

                        <!-- Cancel button -->
                        <button class="btn btn-link btn-sm text-muted ms-auto"
                                t-on-click="() => currentResponse.signal.abort()"
                                t-att-title="env._t('Cancel response')">
                            <i class="fa fa-times"/>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
