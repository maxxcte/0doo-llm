// ------------------------------------------------------------------
// Layout
// ------------------------------------------------------------------

.o_LLMThreadView {
    height: 100%;
    min-height: 0;
    background-color: var(--o-view-background-color, #{$o-view-background-color});
}

.o_LLMThreadView_content {
    min-height: 0;
}

.o_LLMThreadView_messageList {
    min-height: 0;
}

// ------------------------------------------------------------------
// Style
// ------------------------------------------------------------------

.o_LLMThreadView_typing {
    .o_LLMThreadView_typingDots {
        display: flex;
        column-gap: 4px;
        align-items: center;

        span {
            width: 5px;
            height: 5px;
            border-radius: 50%;
            background-color: var(--o-gray-500, #{$gray-500});
            animation: typing 1s infinite;

            &:nth-child(2) { animation-delay: 0.2s; }
            &:nth-child(3) { animation-delay: 0.4s; }
        }
    }
}

@keyframes typing {
    0%, 100% {
        transform: translateY(0);
        opacity: 0.5;
    }
    50% {
        transform: translateY(-2px);
        opacity: 1;
    }
}

// Dark mode support
.o-dark-mode .o_LLMThreadView {
    background-color: var(--o-gray-900, #{$gray-900});

    .o_LLMThreadView_header {
        background-color: var(--o-gray-900, #{$gray-900});
        border-color: var(--o-gray-800, #{$gray-800});
    }
}
