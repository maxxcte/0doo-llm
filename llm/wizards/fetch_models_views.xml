<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_fetch_models_wizard" model="ir.ui.view">
        <field name="name">llm.fetch.models.wizard.form</field>
        <field name="model">llm.fetch.models.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="provider_id" readonly="1"/>
                    </group>
                    <field name="line_ids">
                        <tree editable="bottom" create="0" delete="0">
                            <field name="name" readonly="1"/>
                            <field name="model_use" readonly="1"/>
                            <field name="status" readonly="1" decoration-info="status=='existing'" decoration-success="status=='new'" decoration-warning="status=='modified'"/>
                            <field name="selected"/>
                            <field name="details" widget="json_inline" optional="show"/>
                            <field name="existing_model_id" invisible="1"/>
                        </tree>
                    </field>
                </sheet>
                <footer>
                    <button string="Confirm" name="action_confirm" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="action_fetch_models_wizard" model="ir.actions.act_window">
        <field name="name">Fetch Models</field>
        <field name="res_model">llm.fetch.models.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_llm_provider"/>
        <field name="binding_view_types">form</field>
    </record>
</odoo>
