<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Scheduled action to update MIME types -->
    <record id="ir_cron_update_mime_types" model="ir.cron">
        <field name="name">Update Document Page Link MIME Types</field>
        <field name="model_id" ref="model_document_page_link"/>
        <field name="state">code</field>
        <field name="code">model.update_pending_mime_types(limit=100)</field>
        <field name="interval_number">10</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="active" eval="True"/>
    </record>

    <!-- Scheduled action to retrieve page content from external URLs -->
    <record id="ir_cron_retrieve_page_content" model="ir.cron">
        <field name="name">Retrieve Document Page Content from External URLs</field>
        <field name="model_id" ref="model_document_page"/>
        <field name="state">code</field>
        <field name="code">model.scheduled_retrieve_content(limit=20)</field>
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="active" eval="True"/>
    </record>
</odoo>
