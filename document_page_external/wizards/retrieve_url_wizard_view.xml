<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Retrieve URL Wizard Form View -->
    <record id="view_document_page_retrieve_url_form" model="ir.ui.view">
        <field name="name">document.page.retrieve.url.form</field>
        <field name="model">document.page.retrieve.url</field>
        <field name="arch" type="xml">
            <form string="Retrieve External Content">
                <sheet>
                    <group>
                        <field name="page_id" invisible="1"/>
                        <field name="url"/>
                        <field name="summary"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_retrieve"
                            string="Retrieve"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Standalone wizard action (for direct menu access) -->
    <record id="action_document_page_retrieve_url" model="ir.actions.act_window">
        <field name="name">Retrieve External Content</field>
        <field name="res_model">document.page.retrieve.url</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="document_page.model_document_page"/>
    </record>
</odoo>