<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_llm_rag_search_wizard_form" model="ir.ui.view">
        <field name="name">llm.rag.search.wizard.form</field>
        <field name="model">llm.rag.search.wizard</field>
        <field name="arch" type="xml">
            <form string="RAG Search">
                <field name="state" invisible="1"/>
                <sheet>
                    <!-- Search State -->
                    <group attrs="{'invisible': [('state', '=', 'results')]}">
                        <div class="alert alert-info">
                            <p><strong>Search RAG Documents</strong></p>
                            <p>Enter a query to find relevant chunks.</p>
                        </div>
                        <field name="query" placeholder="e.g., What are the key features?" required="1"/>
                        <group>
                            <field name="top_k"/>
                            <field name="top_n"/>
                            <field name="similarity_cutoff" widget="percentage"/>
                        </group>
                    </group>

                    <!-- Results State -->
                    <group attrs="{'invisible': [('state', '=', 'search')]}">
                        <div class="alert alert-success" attrs="{'invisible': [('result_count', '=', 0)]}">
                            <i class="fa fa-check-circle"/> Found <field name="result_count"/> chunks
                        </div>
                        <div class="alert alert-warning" attrs="{'invisible': [('result_count', '>', 0)]}">
                            <i class="fa fa-exclamation-triangle"/> No results found. Adjust your query or parameters.
                        </div>
                        <group attrs="{'invisible': [('result_count', '=', 0)]}">
                            <field name="query" readonly="1"/>
                            <field name="similarity_cutoff" widget="percentage" readonly="1"/>
                        </group>
                        <field name="result_lines" attrs="{'invisible': [('result_count', '=', 0)]}">
                            <tree>
                                <field name="document_name"/>
                                <field name="chunk_name"/>
                                <field name="similarity_percentage"/>
                            </tree>
                            <form>
                                <group>
                                    <field name="document_name"/>
                                    <field name="chunk_name"/>
                                    <field name="similarity_percentage"/>
                                </group>
                                <notebook>
                                    <page string="Content">
                                        <field name="content" widget="text" readonly="1"/>
                                    </page>
                                </notebook>
                            </form>
                        </field>
                    </group>
                </sheet>
                <footer>
                    <button name="action_search" string="Search" type="object" class="btn-primary" attrs="{'invisible': [('state', '=', 'results')]}"/>
                    <button name="action_back_to_search" string="New Search" type="object" class="btn-secondary" attrs="{'invisible': [('state', '=', 'search')]}"/>
                    <button string="Close" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
