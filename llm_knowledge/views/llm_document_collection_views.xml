<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Form View -->
    <record id="view_llm_document_collection_form" model="ir.ui.view">
        <field name="name">llm.document.collection.form</field>
        <field name="model">llm.document.collection</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
            name="action_open_add_domain_wizard"
            string="Add Domain"
            type="object"
            class="btn-primary"
          />
                    <button
            name="add_documents_from_domain"
            string="Add Documents from Domain"
            type="object"
            class="btn-primary"
            attrs="{'invisible': [('source_domains', '=', False)]}"
          />
                    <button
            name="process_documents"
            string="Process Documents"
            type="object"
            class="btn-primary"
            confirm="This will process documents through the RAG pipeline until chunked state. Continue?"
          />
                    <button
            name="embed_documents"
            string="Embed Documents"
            type="object"
            class="btn-primary"
            confirm="This will embed all document chunks with the selected embedding model. Continue?"
          />
                    <button
            name="action_process_and_embed"
            string="Process &amp; Embed"
            type="object"
            class="btn-secondary"
            confirm="This will process and embed all documents in one step. Continue?"
          />
                    <button
            name="reindex_collection"
            string="Reindex Collection"
            type="object"
            class="btn-secondary"
            confirm="This will recreate vector indexes for documents. Continue?"
          />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
              name="action_view_documents"
              type="object"
              class="oe_stat_button"
              icon="fa-file-text"
            >
                            <field
                name="document_count"
                widget="statinfo"
                string="Documents"
              />
                        </button>
                        <button
              name="action_view_chunks"
              type="object"
              class="oe_stat_button"
              icon="fa-puzzle-piece"
            >
                            <field
                name="chunk_count"
                widget="statinfo"
                string="Chunks"
              />
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Collection Name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="active" widget="boolean_toggle" />
                            <field
                name="embedding_model_id"
                options="{'no_create': True}"
                required="1"
              />
                        </group>
                        <group>
                            <field
                name="source_domains"
                widget="ace"
                options="{'mode': 'json'}"
                placeholder='{"model.name": "[domain]", "res.partner": "[("type", "=", "contact")]"}'
              />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field
                name="description"
                placeholder="Collection description..."
                nolabel="1"
              />
                        </page>
                        <page string="Documents">
                            <field name="document_ids" nolabel="1">
                                <tree>
                                    <field name="name" />
                                    <field name="res_model" />
                                    <field name="res_id" />
                                    <field name="state" />
                                    <field name="chunk_count" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field
            name="message_follower_ids"
            widget="mail_followers"
          />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_llm_document_collection_tree" model="ir.ui.view">
        <field name="name">llm.document.collection.tree</field>
        <field name="model">llm.document.collection</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="document_count" />
                <field name="chunk_count" />
                <field name="embedding_model_id" />
                <field name="active" widget="boolean_toggle" />
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_llm_document_collection_search" model="ir.ui.view">
        <field name="name">llm.document.collection.search</field>
        <field name="model">llm.document.collection</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="embedding_model_id" />
                <filter
          string="Archived"
          name="inactive"
          domain="[('active', '=', False)]"
        />
                <group expand="0" string="Group By">
                    <filter
            string="Embedding Model"
            name="group_by_model"
            domain="[]"
            context="{'group_by':'embedding_model_id'}"
          />
                </group>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_llm_document_collection_kanban" model="ir.ui.view">
        <field name="name">llm.document.collection.kanban</field>
        <field name="model">llm.document.collection</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="id" />
                <field name="name" />
                <field name="document_count" />
                <field name="chunk_count" />
                <field name="embedding_model_id" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name" />
                                    </strong>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="row">
                                    <div class="col-6">
                                        <strong>Documents:</strong> <field
                      name="document_count"
                    />
                                    </div>
                                    <div class="col-6">
                                        <strong>Chunks:</strong> <field
                      name="chunk_count"
                    />
                                    </div>
                                </div>
                                <div>
                                    <strong>Model:</strong> <field
                    name="embedding_model_id"
                  />
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_llm_document_collection" model="ir.actions.act_window">
        <field name="name">Collections</field>
        <field name="res_model">llm.document.collection</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first RAG collection
            </p>
            <p>
                Collections group documents that share the same embedding model for RAG processing.
            </p>
        </field>
    </record>

</odoo>
