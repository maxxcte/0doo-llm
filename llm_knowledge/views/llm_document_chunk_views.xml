<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Tree View -->
    <record id="view_llm_document_chunk_tree" model="ir.ui.view">
        <field name="name">llm.document.chunk.tree</field>
        <field name="model">llm.document.chunk</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="document_id" />
                <field name="sequence" widget="handle" />
                <field name="collection_ids" widget="many2many_tags" />
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_llm_document_chunk_form" model="ir.ui.view">
        <field name="name">llm.document.chunk.form</field>
        <field name="model">llm.document.chunk</field>
        <field name="arch" type="xml">
            <form string="Document Chunk">
                <sheet>
                    <group>
                        <field name="document_id" />
                        <field name="sequence" />
                        <field name="content" />
                        <field name="metadata" widget="json_widget" />
                        <field name="collection_ids" widget="many2many_tags" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_llm_document_chunk_search" model="ir.ui.view">
        <field name="name">llm.document.chunk.search</field>
        <field name="model">llm.document.chunk</field>
        <field name="arch" type="xml">
            <search>
                <field name="embedding"/>
                <field name="name" />
                <field name="content" />
                <field name="document_id" />
                <field name="collection_ids" />
                
                <!-- Similarity threshold filters -->
                <separator string="Similarity Threshold"/>
                <filter string="High Similarity (0.75)" name="similarity_high" 
                        context="{'search_similarity_threshold': 0.75}"/>
                <filter string="Medium Similarity (0.5)" name="similarity_medium" 
                        context="{'search_similarity_threshold': 0.5}"/>
                <filter string="Low Similarity (0.25)" name="similarity_low" 
                        context="{'search_similarity_threshold': 0.25}"/>
                
                <!-- Vector search operator filters -->
                <separator string="Search Method"/>
                <filter string="Cosine Similarity(&lt;=&gt;)" name="operator_cosine" 
                        context="{'search_vector_operator': '&lt;=&gt;'}"/>
                <filter string="Euclidean Distance(&lt;-&gt;)" name="operator_euclidean" 
                        context="{'search_vector_operator': '&lt;-&gt;'}"/>
                <filter string="Inner Product(&lt;#&gt;)" name="operator_inner_product" 
                        context="{'search_vector_operator': '&lt;#&gt;'}"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_llm_document_chunk" model="ir.actions.act_window">
        <field name="name">Document Chunks</field>
        <field name="res_model">llm.document.chunk</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_similarity_medium': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No document chunks found
            </p>
            <p>
                Document chunks are segments of documents used for RAG (Retrieval Augmented Generation).
            </p>
        </field>
    </record>
</odoo>
