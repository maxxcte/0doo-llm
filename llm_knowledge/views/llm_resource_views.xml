<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Kanban View to add RAG elements -->
    <record id="view_llm_resource_kanban" model="ir.ui.view">
        <field name="name">llm.resource.kanban</field>
        <field name="model">llm.resource</field>
        <!-- Inherit the base view from llm_resource -->
        <field name="inherit_id" ref="llm_resource.view_llm_resource_kanban"/>
        <field name="arch" type="xml">
            <!-- Add chunk_count field definition -->
            <xpath expr="//field[@name='res_id']" position="after">
                <field name="chunk_count"/>
            </xpath>

            <!-- Add RAG buttons to dropdown -->
            <xpath expr="//div[@class='dropdown-menu dropdown-menu-end']//a[@name='parse']" position="after">
                <a name="chunk" type="object" class="dropdown-item" t-if="record.state.raw_value == 'parsed'">Chunk</a>
                <a name="action_embed" type="object" class="dropdown-item" t-if="record.state.raw_value == 'chunked'">Embed</a>
            </xpath>
             <xpath expr="//div[@class='dropdown-menu dropdown-menu-end']//a[@name='process_resource']" position="after">
                 <a name="action_reindex" type="object" class="dropdown-item" t-if="record.state.raw_value == 'ready'">Re-index</a>
             </xpath>

            <!-- Modify Process button text -->
             <xpath expr="//div[@class='dropdown-menu dropdown-menu-end']//a[@name='process_resource']" position="attributes">
                <attribute name="string">Process All</attribute>
            </xpath>

            <!-- Add chunk count display -->
             <xpath expr="//div[hasclass('o_kanban_record_body')]/div[1]" position="after">
                 <div class="text-muted" t-if="record.chunk_count.raw_value > 0"> <!-- Check raw_value for numeric comparison -->
                     <i class="fa fa-puzzle-piece" title="Chunks"/> <field name="chunk_count"/> chunks
                 </div>
             </xpath>

             <!-- Add RAG states to label options -->
             <xpath expr="//field[@name='state'][@widget='label_selection']" position="attributes">
                 <attribute name="options">{'classes': {'draft': 'default', 'retrieved': 'primary', 'parsed': 'info', 'chunked': 'warning', 'ready': 'success'}}</attribute>
             </xpath>
        </field>
    </record>

    <!-- Inherit Form View to add RAG elements -->
    <record id="view_llm_resource_form" model="ir.ui.view">
        <field name="name">llm.resource.form</field>
        <field name="model">llm.resource</field>
         <!-- Inherit the base view from llm_resource -->
        <field name="inherit_id" ref="llm_resource.view_llm_resource_form"/>
        <field name="arch" type="xml">
             <!-- Add RAG buttons to header -->
            <xpath expr="//header/button[@name='parse']" position="after">
                <button name="chunk" string="Chunk" type="object" class="oe_highlight" states="parsed"/>
                <button name="action_embed" string="Embed" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'chunked')]}"/>
            </xpath>
             <xpath expr="//header/button[@name='process_resource']" position="after">
                <button name="action_reindex" string="Re-index" type="object" class="btn-secondary" attrs="{'invisible': [('state', '!=', 'ready')]}"/>
             </xpath>
             <!-- Modify Process button text -->
             <xpath expr="//header/button[@name='process_resource']" position="attributes">
                 <attribute name="string">Process All</attribute>
             </xpath>

             <!-- Add RAG states to statusbar -->
            <xpath expr="//field[@name='state'][@widget='statusbar']" position="attributes">
                 <attribute name="statusbar_visible">draft,retrieved,parsed,chunked,ready</attribute>
            </xpath>

            <!-- Add View Chunks button -->
            <xpath expr="//div[@name='button_box']" position="inside">
                 <!-- Define chunk_count field for attrs evaluation -->
                 <field name="chunk_count" invisible="1"/>
                <button name="action_view_chunks" type="object" class="oe_stat_button" icon="fa-puzzle-piece" attrs="{'invisible': [('chunk_count', '=', 0)]}">
                    <!-- Use field value directly in button -->
                    <field name="chunk_count" widget="statinfo" string="Chunks"/>
                </button>
            </xpath>

             <!-- Add Collection and Chunking fields -->
            <xpath expr="//group[@name='group_right']" position="inside">
                 <field name="collection_ids" widget="many2many_tags"/>
                 <field name="chunker" attrs="{'readonly': [('state', 'not in', ['draft', 'retrieved', 'parsed'])]}"/>
                 <field name="target_chunk_size" attrs="{'readonly': [('state', 'not in', ['draft', 'retrieved', 'parsed'])]}"/>
                 <field name="target_chunk_overlap" attrs="{'readonly': [('state', 'not in', ['draft', 'retrieved', 'parsed'])]}"/>
            </xpath>

            <!-- Add Chunks page to notebook -->
            <xpath expr="//notebook" position="inside">
                <page string="Chunks" name="chunks" attrs="{'invisible': [('chunk_count', '=', 0)]}">
                    <!-- Define chunk_ids field -->
                    <field name="chunk_ids" context="{'default_resource_id': active_id}">
                        <tree>
                            <field name="sequence" widget="handle"/>
                            <field name="name"/>
                             <field name="metadata" widget="json_preview" optional="show"/>
                        </tree>
                    </field>
                 </page>
            </xpath>
        </field>
    </record>

    <!-- Inherit Tree View to add chunk count -->
     <record id="view_llm_resource_tree" model="ir.ui.view">
        <field name="name">llm.resource.tree</field>
        <field name="model">llm.resource</field>
         <!-- Inherit the base view from llm_resource -->
        <field name="inherit_id" ref="llm_resource.view_llm_resource_tree"/>
        <field name="arch" type="xml">
             <!-- Add chunk_count field definition and display -->
            <xpath expr="//field[@name='state']" position="after">
                <field name="chunk_count"/>
            </xpath>
        </field>
    </record>

     <!-- Inherit Search View to add RAG state filters and grouping -->
     <record id="view_llm_resource_search" model="ir.ui.view">
        <field name="name">llm.resource.search</field>
        <field name="model">llm.resource</field>
         <!-- Inherit the base view from llm_resource -->
        <field name="inherit_id" ref="llm_resource.view_llm_resource_search"/>
        <field name="arch" type="xml">
            <!-- Add RAG state filters -->
            <xpath expr="//filter[@name='state_parsed']" position="after">
                <filter string="Chunked" name="state_chunked" domain="[('state', '=', 'chunked')]"/>
                <filter string="Ready" name="state_ready" domain="[('state', '=', 'ready')]"/>
            </xpath>
            <!-- Add Collection grouping -->
            <xpath expr="//group/filter[@name='group_by_model']" position="after">
                 <separator/>
                 <!-- Define collection_ids field for grouping -->
                 <field name="collection_ids" invisible="1"/>
                 <filter string="Collection" name="group_by_collection" domain="[]" context="{'group_by':'collection_ids'}"/>
            </xpath>
        </field>
    </record>
</odoo>