<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="model_inspector_wizard_form_view" model="ir.ui.view">
        <field name="name">llm_tool.model.inspector.wizard.form</field>
        <field name="model">llm_tool.model.inspector.wizard</field>
        <field name="arch" type="xml">
            <form string="Model Inspector">
                <group>
                    <field name="model_id" />
                    <field name="include_private" />
                </group>
                <footer>
                    <button
            name="action_inspect_model"
            string="Inspect"
            type="object"
            class="btn-primary"
            data-hotkey="q"
          />
                    <button
            string="Cancel"
            class="btn-secondary"
            special="cancel"
            data-hotkey="z"
          />
                </footer>
                <notebook>
                    <page string="Methods" name="methods_page">
                         <field name="method_lines" nolabel="1">
                            <tree string="Methods" editable="bottom">
                                <field name="name" />
                                <field name="signature" />
                                <field name="docstring" optional="hide" />
                                <field name="method_type" />
                                <field name="decorators" />
                             </tree>
                             <form string="Method Details">
                                <group>
                                    <field name="name" />
                                    <field name="method_type" />
                                    <field name="signature" />
                                    <field name="decorators" />
                                    <field name="docstring" />
                                </group>
                             </form>
                         </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="action_model_inspector_wizard" model="ir.actions.act_window">
        <field name="name">Inspect Model Methods</field>
        <field name="res_model">llm_tool.model.inspector.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Add a menu item, e.g., under Developer or a custom LLM menu -->
    <menuitem
    id="menu_model_inspector_wizard"
    name="Model Inspector (Research)"
    action="action_model_inspector_wizard"
    parent="base.menu_custom"
    sequence="50"
  />

</odoo>
