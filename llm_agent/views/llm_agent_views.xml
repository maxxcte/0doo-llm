<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_llm_agent_tree" model="ir.ui.view">
        <field name="name">llm.agent.tree</field>
        <field name="model">llm.agent</field>
        <field name="arch" type="xml">
            <tree string="Agents">
                <field name="name"/>
                <field name="provider_id"/>
                <field name="model_id"/>
                <field name="role"/>
                <field name="thread_count"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_llm_agent_form" model="ir.ui.view">
        <field name="name">llm.agent.form</field>
        <field name="model">llm.agent</field>
        <field name="arch" type="xml">
            <form string="Agent">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_threads" type="object" class="oe_stat_button" icon="fa-comments">
                            <field name="thread_count" widget="statinfo" string="Threads"/>
                        </button>
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Agent Name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="provider_id"/>
                            <field name="model_id"/>
                            <field name="role"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Agent Configuration" name="agent_configuration">
                            <group>
                                <field name="goal"/>
                                <field name="background"/>
                                <field name="instructions"/>
                            </group>
                        </page>
                        <page string="Tools" name="tools">
                            <field name="tool_ids" widget="many2many_tags"/>
                        </page>
                        <page string="System Prompt" name="system_prompt">
                            <group>
                                <field name="use_custom_system_prompt"/>
                                <field name="custom_system_prompt" attrs="{'invisible': [('use_custom_system_prompt', '=', False)], 'required': [('use_custom_system_prompt', '=', True)]}" widget="text_markdown"/>
                                <field name="system_prompt" widget="text_markdown" readonly="1" attrs="{'invisible': [('use_custom_system_prompt', '=', True)]}"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_llm_agent_search" model="ir.ui.view">
        <field name="name">llm.agent.search</field>
        <field name="model">llm.agent</field>
        <field name="arch" type="xml">
            <search string="Search Agents">
                <field name="name"/>
                <field name="provider_id"/>
                <field name="model_id"/>
                <field name="role"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Provider" name="provider" domain="[]" context="{'group_by': 'provider_id'}"/>
                    <filter string="Model" name="model" domain="[]" context="{'group_by': 'model_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_llm_agent" model="ir.actions.act_window">
        <field name="name">Agents</field>
        <field name="res_model">llm.agent</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_llm_agent_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first AI Agent!
            </p>
            <p>
                Agents can be configured with specific roles, goals, and tools to enhance your AI interactions.
            </p>
        </field>
    </record>
</odoo>
