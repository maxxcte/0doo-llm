<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Tree View -->
    <record id="view_llm_agent_tree" model="ir.ui.view">
        <field name="name">llm.agent.tree</field>
        <field name="model">llm.agent</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="provider_id" />
                <field name="model_id" />
                <field name="prompt_id" />
                <field name="thread_count" />
                <field name="active" />
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_llm_agent_form" model="ir.ui.view">
        <field name="name">llm.agent.form</field>
        <field name="model">llm.agent</field>
        <field name="arch" type="xml">
            <form string="Agent">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                                name="action_view_threads"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-comments"
                        >
                            <field
                                    name="thread_count"
                                    widget="statinfo"
                                    string="Threads"
                            />
                        </button>
                        <button
                                name="toggle_active"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-archive"
                        >
                            <field name="active" widget="boolean_toggle" />
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1><field name="name" placeholder="Agent Name" /></h1>
                    </div>
                    <group>
                        <group>
                            <field name="provider_id" />
                            <field name="model_id" />
                        </group>
                        <group>
                            <field name="prompt_id" options="{'no_create': False, 'no_open': False}" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Configuration" name="configuration">
                            <group>
                                <field
                                        name="default_values"
                                        widget="ace"
                                        options="{'mode': 'json'}"
                                        placeholder="{
  &quot;role&quot;: &quot;Customer Support Assistant&quot;,
  &quot;goal&quot;: &quot;Help customers solve their problems efficiently&quot;,
  &quot;background&quot;: &quot;You are a support assistant for our product.&quot;,
  &quot;instructions&quot;: &quot;Always be polite and helpful.&quot;
}"
                                />
                            </group>
                            <div class="alert alert-info w-100 mt-3 mb-3" role="alert">
                                <p class="mb-0">Define default values for prompt variables in JSON format. These will be used as inputs to the prompt template.</p>
                            </div>
                        </page>
                        <page string="Tools" name="tools">
                            <group>
                                <field
                                        name="tool_ids"
                                        widget="many2many_tags"
                                        options="{'no_create': True}"
                                        placeholder="Select tools for this agent..."
                                />
                            </group>
                            <div class="text-muted px-3 py-2">
                                Select the tools this agent may need. These tools will be auto selected when you assign this agent on LLM Chat Thread
                            </div>
                        </page>
                        <page string="Preview" name="preview">
                            <field name="system_prompt_preview" widget="ace" options="{'mode': 'markdown'}" readonly="1"/>
                        </page>
                        <page string="Related Threads" name="related_threads">
                            <field name="thread_ids" readonly="1">
                                <tree>
                                    <field name="name" />
                                    <field name="user_id" />
                                    <field name="write_date" />
                                    <button
                                            name="action_open_thread"
                                            string="Open"
                                            type="object"
                                            class="btn btn-primary btn-sm"
                                    />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_llm_agent_search" model="ir.ui.view">
        <field name="name">llm.agent.search</field>
        <field name="model">llm.agent</field>
        <field name="arch" type="xml">
            <search string="Search Agents">
                <field name="name" />
                <field name="provider_id" />
                <field name="model_id" />
                <field name="prompt_id" />
                <separator />
                <filter
                        string="Archived"
                        name="inactive"
                        domain="[('active', '=', False)]"
                />
                <group expand="0" string="Group By">
                    <filter
                            string="Provider"
                            name="provider"
                            domain="[]"
                            context="{'group_by': 'provider_id'}"
                    />
                    <filter
                            string="Model"
                            name="model"
                            domain="[]"
                            context="{'group_by': 'model_id'}"
                    />
                    <filter
                            string="Prompt Template"
                            name="prompt"
                            domain="[]"
                            context="{'group_by': 'prompt_id'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_llm_agent" model="ir.actions.act_window">
        <field name="name">Agents</field>
        <field name="res_model">llm.agent</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_llm_agent_search" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first AI Agent!
            </p>
            <p>
                Agents can be configured with specific roles, goals, and tools to enhance your AI interactions.
            </p>
        </field>
    </record>
</odoo>
